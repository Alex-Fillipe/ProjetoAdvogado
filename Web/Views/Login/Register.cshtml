@model ViewModel.RegisterViewModel


@{
    ViewBag.Title = "Cadastro de Usuário";
}

<h2>Cadastro</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Digite seu nome" })
        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Usuario)
        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Digite seu usuário" })
        @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Senha)
        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Digite sua senha" })
        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmarSenha)
        @Html.PasswordFor(m => m.ConfirmarSenha, new { @class = "form-control", placeholder = "Confirme sua senha" })
        @Html.ValidationMessageFor(m => m.ConfirmarSenha, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Cadastrar</button>

    <p>Já tem conta? @Html.ActionLink("Faça login aqui", "Index", "Login")</p>
}
